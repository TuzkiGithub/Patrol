<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="tech.piis.modules.system.mapper.SysUserDeptMapper">

    <resultMap id="userDeptResultMap" type="tech.piis.modules.system.domain.SysUserDept">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="deptId" column="dept_id"/>
    </resultMap>

    <insert id="batchUserDept" parameterType="tech.piis.modules.system.domain.SysUserDept">
        insert into sys_user_dept(user_id, dept_id) values
        <foreach item="item" index="index" collection="list" separator=",">
            (#{item.userId},#{item.deptId})
        </foreach>
    </insert>

    <delete id="delUserDeptBatch" parameterType="tech.piis.modules.system.domain.SysUserDept">
        delete from sys_user_dept
        where user_id in (
        <foreach collection="list" item="item" separator=",">
            #{item.userId}
        </foreach>
        )
    </delete>
</mapper>