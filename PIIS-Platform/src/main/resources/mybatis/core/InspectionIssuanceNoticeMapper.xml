<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="tech.piis.modules.core.mapper.InspectionIssuanceNoticeMapper">
    
    <resultMap type="InspectionIssuanceNoticePO" id="InspectionIssuanceNoticeResult">
        <result property="issuanceNoticeId"    column="ISSUANCE_NOTICE_ID"    />
        <result property="planId"    column="PLAN_ID"    />
        <result property="approvalFlag"    column="APPROVAL_FLAG"    />
        <result property="createdBy"    column="CREATED_BY"    />
        <result property="createdTime"    column="CREATED_TIME"    />
        <result property="updatedBy"    column="UPDATED_BY"    />
        <result property="updatedTime"    column="UPDATED_TIME"    />
        <result property="entId"    column="ENT_ID"    />
    </resultMap>

    <resultMap id="unitsBizCountResultMap" type="UnitsBizCountVO">
        <result property="unitsId" column="units_id"/>
        <result property="orgId" column="org_id"/>
        <result property="orgName" column="org_name"/>
        <result property="count" column="count"/>
        <result property="createdTime" column="CREATED_TIME"/>
    </resultMap>

    <sql id="selectInspectionIssuanceNoticeVo">
        select ISSUANCE_NOTICE_ID, PLAN_ID, APPROVAL_FLAG, CREATED_BY, CREATED_TIME, UPDATED_BY, UPDATED_TIME, ENT_ID from inspection_issuance_notice
    </sql>

    <select id="selectInspectionIssuanceNoticeCount}" parameterType="java.lang.String"
            resultMap="unitsBizCountResultMap">
        select u.UNITS_ID,u.ORG_ID,u.ORG_NAME,u.created_time,count(d.UNITS_ID) as count
        from inspection_units u
        left join inspection_issuance_notice d on u.UNITS_ID = d.UNITS_ID
        where u.plan_id = #{planId}
        group by u.UNITS_ID
        order by u.created_time, u.UNITS_ID desc
    </select>

    <select id="selectInspectionIssuanceNoticeList" parameterType="InspectionIssuanceNoticePO" resultMap="InspectionIssuanceNoticeResult">
        <include refid="selectInspectionIssuanceNoticeVo"/>
        <where>  
            <if test="planId != null  and planId != ''"> and PLAN_ID = #{planId}</if>
            <if test="approvalFlag != null "> and APPROVAL_FLAG = #{approvalFlag}</if>
            <if test="createdBy != null  and createdBy != ''"> and CREATED_BY = #{createdBy}</if>
            <if test="createdTime != null "> and CREATED_TIME = #{createdTime}</if>
            <if test="updatedBy != null  and updatedBy != ''"> and UPDATED_BY = #{updatedBy}</if>
            <if test="updatedTime != null "> and UPDATED_TIME = #{updatedTime}</if>
            <if test="entId != null  and entId != ''"> and ENT_ID = #{entId}</if>
        </where>
    </select>
    
    <select id="selectInspectionIssuanceNoticeById" parameterType="Long" resultMap="InspectionIssuanceNoticeResult">
        <include refid="selectInspectionIssuanceNoticeVo"/>
        where ISSUANCE_NOTICE_ID = #{issuanceNoticeId}
    </select>
        
    <insert id="insertInspectionIssuanceNotice" parameterType="InspectionIssuanceNoticePO" useGeneratedKeys="true" keyProperty="issuanceNoticeId">
        insert into inspection_issuance_notice
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="planId != null  and planId != ''">PLAN_ID,</if>
            <if test="approvalFlag != null ">APPROVAL_FLAG,</if>
            <if test="createdBy != null  and createdBy != ''">CREATED_BY,</if>
            <if test="createdTime != null ">CREATED_TIME,</if>
            <if test="updatedBy != null  and updatedBy != ''">UPDATED_BY,</if>
            <if test="updatedTime != null ">UPDATED_TIME,</if>
            <if test="entId != null  and entId != ''">ENT_ID,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="planId != null  and planId != ''">#{planId},</if>
            <if test="approvalFlag != null ">#{approvalFlag},</if>
            <if test="createdBy != null  and createdBy != ''">#{createdBy},</if>
            <if test="createdTime != null ">#{createdTime},</if>
            <if test="updatedBy != null  and updatedBy != ''">#{updatedBy},</if>
            <if test="updatedTime != null ">#{updatedTime},</if>
            <if test="entId != null  and entId != ''">#{entId},</if>
         </trim>
    </insert>

    <update id="updateInspectionIssuanceNotice" parameterType="InspectionIssuanceNoticePO">
        update inspection_issuance_notice
        <trim prefix="SET" suffixOverrides=",">
            <if test="planId != null  and planId != ''">PLAN_ID = #{planId},</if>
            <if test="approvalFlag != null ">APPROVAL_FLAG = #{approvalFlag},</if>
            <if test="createdBy != null  and createdBy != ''">CREATED_BY = #{createdBy},</if>
            <if test="createdTime != null ">CREATED_TIME = #{createdTime},</if>
            <if test="updatedBy != null  and updatedBy != ''">UPDATED_BY = #{updatedBy},</if>
            <if test="updatedTime != null ">UPDATED_TIME = #{updatedTime},</if>
            <if test="entId != null  and entId != ''">ENT_ID = #{entId},</if>
        </trim>
        where ISSUANCE_NOTICE_ID = #{issuanceNoticeId}
    </update>

    <delete id="deleteInspectionIssuanceNoticeById" parameterType="Long">
        delete from inspection_issuance_notice where ISSUANCE_NOTICE_ID = #{issuanceNoticeId}
    </delete>

    <delete id="deleteInspectionIssuanceNoticeByIds" parameterType="String">
        delete from inspection_issuance_notice where ISSUANCE_NOTICE_ID in 
        <foreach item="issuanceNoticeId" collection="array" open="(" separator="," close=")">
            #{issuanceNoticeId}
        </foreach>
    </delete>
    
</mapper>