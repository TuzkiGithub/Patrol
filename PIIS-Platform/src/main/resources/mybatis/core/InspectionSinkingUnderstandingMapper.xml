<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="tech.piis.modules.core.mapper.InspectionSinkingUnderstandingMapper">

    <resultMap type="InspectionSinkingUnderstandingPO" id="InspectionSinkingUnderstandingResult">
        <result property="sinkingUnderstandingId" column="SINKING_UNDERSTANDING_ID"/>
        <result property="planId" column="PLAN_ID"/>
        <result property="unitsId" column="UNITS_ID"/>
        <result property="researchCompany" column="RESEARCH_COMPANY"/>
        <result property="researchCompanyId" column="RESEARCH_COMPANY_ID"/>
        <result property="sinkingTime" column="SINKING_TIME"/>
        <result property="target" column="TARGET"/>
        <result property="createdBy" column="CREATED_BY"/>
        <result property="createdTime" column="CREATED_TIME"/>
        <result property="updatedBy" column="UPDATED_BY"/>
        <result property="updatedTime" column="UPDATED_TIME"/>
        <result property="entId" column="ENT_ID"/>
        <collection property="sinkingUnderstandingDetailList" javaType="java.util.List"
                    resultMap="InspectionSinkingUnderstandingDetailResultMap"/>
    </resultMap>

    <resultMap id="InspectionSinkingUnderstandingDetailResultMap" type="InspectionSinkingUnderstandingDetailPO">
        <id property="sinkingUnderstandingDetailId" column="SINKING_UNDERSTANDING_DETAIL_ID"/>
        <result property="understandingName" column="UNDERSTANDING_NAME"/>
        <result property="companyId" column="COMPANY_ID"/>
        <result property="companyName" column="COMPANY_NAME"/>
        <result property="postName" column="POST_NAME"/>
        <result property="understandingContent" column="UNDERSTANDING_CONTENT"/>
    </resultMap>

    <resultMap id="unitsBizCountResultMap" type="UnitsBizCountVO">
        <result property="unitsId" column="units_id"/>
        <result property="orgId" column="org_id"/>
        <result property="orgName" column="org_name"/>
        <result property="count" column="count"/>
        <result property="createdTime" column="CREATED_TIME"/>
    </resultMap>

    <sql id="selectInspectionSinkingUnderstandingVo">
        select SINKING_UNDERSTANDING_ID, PLAN_ID, RESEARCH_COMPANY, RESEARCH_COMPANY_ID, SINKING_TIME, TARGET, CREATED_BY, CREATED_TIME, UPDATED_BY, UPDATED_TIME, ENT_ID from inspection_sinking_understanding
    </sql>

    <select id="selectInspectionSinkingUnderstandingList" parameterType="InspectionSinkingUnderstandingPO"
            resultMap="InspectionSinkingUnderstandingResult">
        select
          u.SINKING_UNDERSTANDING_ID,
          u.PLAN_ID,
          u.RESEARCH_COMPANY,
          u.RESEARCH_COMPANY_ID,
          u. SINKING_TIME,
          u.  TARGET,
          u.CREATED_BY,
          u.CREATED_TIME,
          u. UPDATED_BY,
          u.UPDATED_TIME,
          u. ENT_ID,
          SINKING_UNDERSTANDING_DETAIL_ID,
          UNDERSTANDING_NAME,
          COMPANY_ID,
          COMPANY_NAME,
          POST_NAME,
          UNDERSTANDING_CONTENT
    from (
       select
         SINKING_UNDERSTANDING_ID,
         PLAN_ID,
         RESEARCH_COMPANY,
         RESEARCH_COMPANY_ID,
         SINKING_TIME,
         TARGET,
         CREATED_BY,
         CREATED_TIME,
         UPDATED_BY,
         UPDATED_TIME,
         ENT_ID
       from inspection_sinking_understanding
       where PLAN_ID =#{planId}
             and UNITS_ID = #{unitsId}
       limit #{pageNum},#{pageSize}
     ) u
    left join inspection_sinking_understanding_detail d on u.SINKING_UNDERSTANDING_ID = d.SINKING_UNDERSTANDING_ID
    order by u.CREATED_TIME desc
    </select>

    <select id="selectInspectionSinkingUnderstandingCount" parameterType="java.lang.String"
            resultMap="unitsBizCountResultMap">
        select u.UNITS_ID,u.ORG_ID,u.ORG_NAME,u.created_time,count(d.UNITS_ID) as count
        from inspection_units u
        left join inspection_sinking_understanding d on u.UNITS_ID = d.UNITS_ID
        where u.plan_id = #{planId}
        group by u.UNITS_ID
        order by u.created_time, u.UNITS_ID desc
    </select>


</mapper>