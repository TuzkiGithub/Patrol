<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="tech.piis.modules.managment.mapper.LeadingGroupFoundMapper">
    <resultMap id="leadingGroupFoundResultMap" type="tech.piis.modules.managment.domain.po.LeadingGroupFoundPO">
        <id property="leadingGroupId" column="LEADING_GROUP_ID"/>
        <result property="orgId" column="ORG_ID"/>
        <result property="foundTime" column="FOUND_TIME"/>
        <result property="orgName" column="ORG_NAME"/>
        <result property="fatherOrgId" column="FATHER_ORG_ID"/>
        <result property="createdBy" column="CREATED_BY"/>
        <result property="createdTime" column="CREATED_TIME"/>
        <result property="updatedBy" column="UPDATED_BY"/>
        <result property="updatedTime" column="UPDATED_TIME"/>
        <result property="entId" column="ENT_ID"/>
    </resultMap>

