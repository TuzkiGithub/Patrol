    <select id="selectMemberCount" resultMap="leadingGroupFoundResultMap">
      select
        M.org_id,
        count(M.member_id) as memberNum,
        F.ORG_NAME
      from LEADING_GROUP_MEMBER M
      LEFT JOIN leading_group_found F
      ON M.ORG_ID = F.ORG_ID
      where M.org_id IN
        (
        select org_id
        from LEADING_GROUP_FOUND
        where father_org_id = #{orgId}
        )
      group by M.org_id
    </select>
</mapper>